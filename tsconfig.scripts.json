{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "noEmit": false,
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "strict": true
    },
    "ts-node": {
      "esm": true
    },
    "include": ["scripts"]
  }
  