generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  supabaseUserId String @unique
  name        String?
  email       String?  @unique
  phoneNumber String   @unique
  provider    String?  // The auth provider (google, linkedin, etc)
  providerId  String?  // The provider's user ID
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Payment      Payment[]
  Subscription Subscription?
  Folder       Folder[]
  Chat         Chat[]

  @@index([supabaseUserId])
}

model Payment {
  id           String        @id @default(uuid())
  userId       String
  planId       String
  txnId        String        @unique
  status       PaymentStatus
  failedReason String?
  paymentMode  String?
  amount       Decimal       @db.Decimal(10, 2)
  currency     String        @default("INR")
  hash         String
  initiatedAt  DateTime      @default(now())
  expiresAt    DateTime
  settledAt    DateTime?
  refundedAt   DateTime?
  refundReason String?
  webhookRaw   Json?
  invoiceUrl   String?
  invoiceId    String?
  notes        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  Plan         Plan          @relation(fields: [planId], references: [id])
  User         User          @relation(fields: [userId], references: [id])
  Subscription Subscription?
}

model Plan {
  id           String         @id @default(uuid())
  name         String         @unique
  price        Decimal        @db.Decimal(10, 2)
  currency     String         @default("INR")
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  features     Json
  Payment      Payment[]
  Subscription Subscription[]
}

model Subscription {
  id        String    @id @default(uuid())
  userId    String    @unique
  planId    String
  paymentId String    @unique
  planName  String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Plan      Plan      @relation(fields: [planId], references: [id])
  User      User      @relation(fields: [userId], references: [id])
  Payment   Payment   @relation(fields: [paymentId], references: [id])
} 

enum PaymentStatus {
  initiated
  success
  failed
  refunded
  bounced
  expired
}

model Folder {
  id        String   @id @default(uuid())
  userId    String
  name      String
  fileCount Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  File      File[]

  @@index([userId])
}

model File {
  id           String   @id @default(uuid())
  folderId     String
  originalName String
  storageName  String   @unique // Unique name for object storage
  size         BigInt
  mimeType     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Folder       Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@index([folderId])
  @@index([storageName])
}

model Chat { 
  id            String      @id @default(uuid())
  chatName      String
  userId        String
  socketIORoomId  String    @unique
  adminId       String?     // Nullable - will be assigned when admin joins
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  chatType      ChatTypes
  status        ChatStatus  @default(PENDING)
  lastMessageAt DateTime?
  isActive      Boolean     @default(true)
  isAiChat      Boolean     @default(false)
  
  // Chat closure tracking
  closedAt      DateTime?
  closedBy      String?     // adminId who closed the chat
  closeReason   String?     // Reason for closing
  archivedAt    DateTime?

  messages      Message[]
  user          User        @relation(fields: [userId], references: [id])
  admin         Admin?      @relation(fields: [adminId], references: [id])

  @@index([userId])
  @@index([adminId])
  @@index([status])
  @@index([chatType])
  @@index([closedAt])
}

model Message { 
  id            String    @id @default(uuid())
  chatId        String    
  senderId      String
  isAdmin       Boolean
  content       String?
  createdAt     DateTime  @default(now())
  readAt        DateTime?

  Chat          Chat      @relation(fields: [chatId], references: [id])

  @@index([chatId])
  @@index([createdAt])
}

model Admin {
  id            String    @id @default(uuid())
  authId        String    @unique
  name          String
  email         String    @unique
  isActive      Boolean   @default(true)
  isOnline      Boolean   @default(false)
  lastSeenAt    DateTime?
  lastLoginAt   DateTime?
  maxChats      Int       @default(5) // Maximum concurrent chats
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  chats         Chat[]
  adminSessions AdminSession[]

  @@index([isOnline])
  @@index([isActive])
}

model AdminSession {
  id        String   @id @default(uuid())
  adminId   String
  socketId  String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  admin     Admin    @relation(fields: [adminId], references: [id])

  @@index([adminId])
  @@index([socketId])
}

enum ChatTypes { 
  ITRTaxFiling
  LoansProducts
  FinancialAdvisory
}

enum ChatStatus {
  PENDING    // Chat created, waiting for admin
  ACTIVE     // Admin has joined and chat is active
  CLOSED     // Chat has been closed
  ARCHIVED   // Chat archived after closure
}